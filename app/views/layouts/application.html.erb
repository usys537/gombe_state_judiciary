<!DOCTYPE html>
<html>
<head>
  <title>Gombestatejudiciary</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>

				<a class="brand" href="/">Gombe State Judiciary</a>

				
				<div class="nav-collapse collapse">
					<ul class="nav">
						<li class="active">
							<%= link_to "Home", root_path %>
						</li>						
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">You and the Judiciary
							<b class="caret"></b>
							</a>							
							<ul class="dropdown-menu">
								<li><%= link_to "Going to Court", main_app.page_path("you-and-the-judiciary/going-to-court")%></li>
								<li><%= link_to "Sentencing", main_app.page_path("you-and-the-judiciary/sentencing")%></li>
								<li><%= link_to "Appeal Process", main_app.page_path("you-and-the-judiciary/appeal-process")%></li>
								<li><%= link_to "State Judiciary staffs", main_app.page_path("you-and-the-judiciary/state-judiciary-staffs")%></li>
								<li><%= link_to "Civil Litigation Cost", main_app.page_path("you-and-the-judiciary/civil-litigation-cost")%></li>
								<li><%= link_to "Forms", main_app.page_path("you-and-the-judiciary/forms")%></li>
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Media
							<b class="caret"></b>
							</a>							
							<ul class="dropdown-menu">
								<li><%= link_to "Images", main_app.page_path("media/images")%></li>
								<li><%= link_to "photos", main_app.photo_albums_path %></li>
								<li><%= link_to "Media Releases", main_app.page_path("media/media-releases")%></li>
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Publications
							<b class="caret"></b>
							</a>							
							<ul class="dropdown-menu">
								<li><%= link_to "Reports", main_app.page_path("Publications/reports")%></li>
							</ul>
						</li>						
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Training
							<b class="caret"></b>
							</a>							
							<ul class="dropdown-menu">
								<li><%= link_to "Judicial College", main_app.page_path("training/judicial-college")%></li>
							</ul>
						</li>
						<li><%= link_to "Forum", forem.root_path %></li>																	
					</ul>
					<ul  class="nav pull-right">
							<% if user_signed_in? %>
								<li><%= link_to current_user.profile_name, main_app.edit_user_registration_path %></li>
								<li><%= link_to "Log Out", main_app.destroy_user_session_path, method: :delete %></li>
								<li><% if current_user.forem_admin %>
								           <%= link_to "Administrate", forem.admin_root_url %>
								    <% end %>
								</li>
							<% else %>
								<li><%= link_to "Register", main_app.new_user_registration_path %></li>
								<li><%= link_to "Log In", main_app.new_user_session_path %></li>							
							<% end %>
          		    </ul>
				</div>				
			</div>
		</div>
	</div>
	<div class="container">
		<% if flash[:notice] %>
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:notice] %>
			</div>
		<% end %>

		<% if flash[:alert] %>
			<div class="alert alert-error">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				<%= flash[:alert] %>
			</div>
		<% end %>
		
	<%= yield %>
	</div>
	<hr>
	<footer class="footer">
		<div class="container">
			<p class="muted credit">"Designed and built by "
				<a href="#" target="_blank">Usman Shamaki</a>
				"and "
				<a href="#">Shamsky</a> "."
			</p>
		</div>
	</footer>
</body>
</html>
